<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    <include layout="@layout/activity_header_layout" />

    <!-- Description -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenue dans l'application Quiz, qui vous permet de tester vos connaissances dans divers domaines !"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:padding="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choisissez un domaine pour commencer :"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:padding="8dp" />

    <!-- Boutons alignÃ©s horizontalement -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/scienceButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Science"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/cultureButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Culture"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/artButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Art"
            android:layout_marginStart="4dp" />
    </LinearLayout>
</LinearLayout>