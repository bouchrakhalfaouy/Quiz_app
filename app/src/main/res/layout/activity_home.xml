<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/myColor1"
    android:padding="16dp">

    <!-- Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bienvenue dans l'application Quiz !"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Testez vos connaissances dans divers domaines ! s'il vous plait choisi un domaine!"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Boutons pour accÃ©der aux quiz -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:weightSum="3">

        <!-- ImageButton pour Science -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageButton
                android:id="@+id/scienceButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/science"
                android:background="@drawable/rounded_button_background"
                android:contentDescription="Science"
                android:layout_marginBottom="8dp"
                android:elevation="4dp"
                android:scaleType="centerInside"
                android:adjustViewBounds="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Science"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:gravity="center" />
        </LinearLayout>

        <!-- ImageButton pour Culture -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageButton
                android:id="@+id/cultureButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/culture"
                android:background="@drawable/rounded_button_background"
                android:contentDescription="Culture"
                android:layout_marginBottom="8dp"
                android:elevation="4dp"
                android:scaleType="centerInside"
                android:adjustViewBounds="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Culture"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:gravity="center" />
        </LinearLayout>

        <!-- ImageButton pour Art -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageButton
                android:id="@+id/artButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/art"
                android:background="@drawable/rounded_button_background"
                android:contentDescription="Art"
                android:layout_marginBottom="8dp"
                android:elevation="4dp"
                android:scaleType="centerInside"
                android:adjustViewBounds="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Art"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
