<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/quiz"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/quiz"
        android:supportsRtl="true"
        android:theme="@style/Theme.Quiz_Application"
        tools:targetApi="31">

        <!-- MainActivity (Activité principale qui se lance au démarrage) -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Quiz_Application">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Autres activités -->
        <activity
            android:name=".header_layout"
            android:exported="false" />
        <activity
            android:name=".ArtQuizActivity"
            android:exported="false" />
        <activity
            android:name=".CultureQuizActivity"
            android:exported="false" />
        <activity
            android:name=".ResultsActivity"
            android:exported="false" />
        <activity
            android:name=".Question"
            android:exported="false" />
        <activity
            android:name=".ScienceQuizActivity"
            android:exported="false" />
        <activity
            android:name=".HomeActivity"
            android:exported="false"
            android:theme="@style/Theme.Quiz_Application" />
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.Quiz_Application" />
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.Quiz_Application" />
        <activity
            android:name=".database"
            android:exported="false" />
    </application>
</manifest>
